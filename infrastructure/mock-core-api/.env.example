# Mock Core Banking API Server - Environment Configuration
# Copy this file to .env and fill in your values

# MongoDB Connection (Required)
MONGODB_USERNAME=admin
MONGODB_PASSWORD=your-password-here
MONGODB_HOST=localhost
MONGODB_PORT=27018
MONGODB_DATABASE=product_catalog_db
MONGODB_AUTH_SOURCE=admin

# Alternative: Use full MongoDB URI instead of individual components
# MONGODB_URI=mongodb://admin:password@localhost:27018/product_catalog_db?authSource=admin

# Mock API Server Ports (Optional - defaults shown)
TEMENOS_PORT=9190
FINACLE_PORT=9191
FIS_PORT=9192
